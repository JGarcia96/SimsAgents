<agent xmlns="http://jadex.sourceforge.net/jadex"

       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://jadex.sourceforge.net/jadex

	                    http://jadex.sourceforge.net/jadex-0.96.xsd"

       name="barbacoa"
       package="jardin.barbacoa">


    <imports>
        <import>java.sql.Time</import>

        <import>jadex.runtime.*</import>

        <import>jadex.planlib.*</import>

        <import>jadex.util.*</import>

        <import>jadex.adapter.fipa.*</import>

        <import>java.util.logging.*</import>

        <import>java.util.*</import>

        <import>ontologia.Accion</import>

        <import>jadex.model.IMMessageEvent</import>

    </imports>
    <capabilities>
        <!-- this capability provides easy access to "out-of-the-box"-plans
             allowing - for example - to register at the DF. -->
        <capability name="dfcap" file="jadex.planlib.DF"/>
    </capabilities>

    <beliefs>
        <belief name="ocupado" class="Boolean">

            <fact>new Boolean(false)</fact>

        </belief>

        <belief name="estropeado" class="Boolean">

            <fact>new Boolean(false)</fact>

        </belief>

        <belief name="obsolescencia" class="Integer">
            <fact>new Integer(15)</fact>
        </belief>

        <belief name="mensaje_cocinar_barbacoa" class="IMessageEvent"/>
        <belief name="mensaje_reparar_barbacoa" class="IMessageEvent"/>

        <belief name="time" class="int" updaterate="750">
            <fact>(int)(System.currentTimeMillis())</fact>
        </belief>

        <belief name="tiempoFinalizacion" class="Time"></belief>

    </beliefs>


    <goals>
        <maintaingoal name="cocinar_barbacoa_tiempo_superado">
            <maintaincondition>$beliefbase.tiempo_fin_cocinar_barbacoa>=beliefbase.tiempo</maintaincondition>
        </maintaingoal>
        <maintaingoal name="reparar_barbacoa_tiempo_superado">
            <maintaincondition>$beliefbase.tiempo_fin_reparar_barbacoa>=beliefbase.tiempo</maintaincondition>
        </maintaingoal>


        <achievegoalref name="df_hambre_cocinarBarbacoa">
            <concrete ref="dfcap.df_hambre_cocinarBarbacoa"/>
        </achievegoalref>
        <achievegoalref name="df_diversion_cocinarBarbacoa" ><concrete ref="dfcap.df_diversion_cocinarBarbacoa"/></achievegoalref>
        <achievegoalref name="df_cocina_cocinarBarbacoa"><concrete ref="dfcap.df_cocina_cocinarBarbacoa"/></achievegoalref>
        <achievegoalref name="df_mecanica_reparar"><concrete ref="dfcap.df_mecanica_reparar"/></achievegoalref>
    </goals>

    <plans>

        <plan name="CocinarBarbacoaPlan">
            <body class="CocinarBarbacoaPlan"/>
            <trigger>
                <messageevent ref="cocinar_barbacoa"/>
            </trigger>
        </plan>

        <plan name="RepararBarbacoaPlan">
            <body class="jardin.barbacoa.RepararBarbacoaPlan"/>


            <trigger>


                <messageevent ref="reparar"/>


            </trigger>


        </plan>


        <plan name="CocinarBarbacoaTerminarPlan">


            <body class="CocinarBarbacoaTerminarPlan"/>


            <trigger>

                <condition>
                    $beliefbase.time>$beliefbase.tiempoFinalizacion
                </condition>


            </trigger>
            <contextcondition>$beliefbase.ocupado==TRUE</contextcondition>


        </plan>


        <plan name="RepararBarbacoaTerminar">

            <!--<body class="RepararBarbacoaTerminarPlan"/>-->
            <body>new RepararBarbacoaTerminarPlan()</body>


            <trigger>

                <condition>
                    $beliefbase.time=$beliefbase.tiempoFinalizacion
                </condition>


            </trigger>
            <contextcondition>$beliefbase.ocupado==TRUE</contextcondition>


        </plan>


    </plans>


    <events>

        <messageevent name="cocinar_barbacoa" direction="receive" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REQUEST</value>

            </parameter>


        </messageevent>

        <messageevent name="reparar" direction="receive" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REQUEST</value>

            </parameter>


        </messageevent>

        <messageevent name="barbacoa_ocupada_cocinar" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REFUSE</value>

            </parameter>


        </messageevent>

        <messageevent name="barbacoa_ocupada_reparar" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REFUSE</value>

            </parameter>


        </messageevent>

        <messageevent name="barbacoa_no_estropeada" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REFUSE</value>

            </parameter>


        </messageevent>

        <messageevent name="barbacoa_estropeada" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.FAILURE</value>

            </parameter>


        </messageevent>

        <messageevent name="has_cocinado_barbacoa" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.INFORM_REF</value>

            </parameter>


        </messageevent>

        <messageevent name="has_reparado" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.INFORM_REF</value>

            </parameter>


        </messageevent>

        <messageevent name="perritos_quemados" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.FAILURE</value>

            </parameter>


        </messageevent>


    </events>
    <configurations>
        <configuration name="default">
            <goals>
                <initialgoal ref="df_hambre_cocinarBarbacoa">
                    <parameter ref="description">
                        <value>
                            S.Fipa.createAgentDescription (null, S.Fipa.createAgentDescription ("Hambre",
                            "CocinarComidaBarbacoa"))
                        </value>
                    </parameter>
                </initialgoal>
                <initialgoal ref="df_diversion_cocinarBarbacoa">
                    <parameter ref="description">
                        <value>
                            S.Fipa.createAgentDescription (null, S.Fipa.createAgentDescription ("Diversion",
                            "CocinarComidaBarbacoa"))
                        </value>
                    </parameter>
                </initialgoal>
                <initialgoal ref="df_cocina_cocinarBarbacoa">
                    <parameter ref="description">
                        <value>
                            S.Fipa.createAgentDescription (null, S.Fipa.createAgentDescription ("Cocina",
                            "CocinarComidaBarbacoa"))
                        </value>
                    </parameter>
                </initialgoal>
                <initialgoal ref="df_mecanica_reparar">
                    <parameter ref="description">
                        <value>
                            S.Fipa.createAgentDescription (null, S.Fipa.createAgentDescription ("Mecanica", "Reparar"))
                        </value>
                    </parameter>
                </initialgoal>
            </goals>
        </configuration>
    </configurations>
</agent>