<agent xmlns="http://jadex.sourceforge.net/jadex"

       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://jadex.sourceforge.net/jadex

	                    http://jadex.sourceforge.net/jadex-0.96.xsd"

       name="barbacoa"

       package="jardin.barbacoa">



    <beliefs>
        <belief name="ocupado" class="Boolean">

            <fact>new Boolean(false)</fact>

        </belief>

        <belief name="estropeado" class="Boolean">

            <fact>new Boolean(false)</fact>

        </belief>

        <belief name="obsolescencia" class="Integer">
            <fact>new Integer(15)</fact>
        </belief>

        <belief name="hambre" class="Integer">
        </belief>

        <belief name="higiene" class="Integer">
        </belief>

        <belief name="energia" class="Integer">
        </belief>

        <belief name="diversion" class="Integer">
        </belief>

        <belief name="experiencia_cocina" class="Integer">
        </belief>

        <belief name="nivel_cocina" class="Integer">
        </belief>

        <belief name="experiencia_mecanica" class="Integer">
        </belief>

        <belief name="time" class="int" updaterate="750">
            <fact> (int)(System.currentTimeMillis()) </fact>
        </belief>

        <belief name="tiempoFinalizacion" class="Time">
        </belief>

    </beliefs>

    <plans>

        <plan name="CocinarBarbacoaPlan">

            <body class="jardin.barbacoa.CocinarBarbacoaPlan"/>

            <trigger>

                <messageevent ref="cocinar_barbacoa"/>

            </trigger>

        </plan>

        <plan name="RepararBarbacoaPlan">

            <body class="jardin.barbacoa.RepararBarbacoaPlan"/>

            <trigger>

                <messageevent ref="reparar"/>

            </trigger>

        </plan>

        <plan name="CocinarBarbacoaTerminarPlan">

            <body class="jardin.barbacoa.CocinarBarbacoaTerminarPlan"/>

            <trigger>

                <condition>$beliefbase.time>=$beliefbase.tiempoFinalizacion
                </condition>
                <condition>$beliefbase.ocupado==TRUE
                </condition>


            </trigger>

        </plan>

        <plan name="RepararBarbacoaTerminarPlan">

            <body class="jardin.barbacoa.CocinarBarbacoaTerminarPlan"/>

            <trigger>

                <condition>$beliefbase.time>=$beliefbase.tiempoFinalizacion
                </condition>
                <condition>$beliefbase.ocupado==TRUE
                </condition>

            </trigger>

        </plan>

    </plans>



    <events>

        <messageevent name="cocinar_barbacoa" direction="receive" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REQUEST</value>

            </parameter>

            <parameter name="content" class="ontologia.acciones.CocinarComidaBarbacoa"/>

        </messageevent>

        <messageevent name="reparar_barbacoa" direction="receive" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REQUEST</value>

            </parameter>

            <parameter name="content" class="ontologia.acciones.Reparar"/>

        </messageevent>

        <messageevent name="barbacoa_ocupada_cocinar" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REFUSE</value>

            </parameter>

            <parameter name="content" class="ontologia.acciones.CocinarComidaBarbacoa"/>

        </messageevent>

        <messageevent name="barbacoa_ocupada_reparar" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REFUSE</value>

            </parameter>

            <parameter name="content" class="ontologia.acciones.Reparar"/>

        </messageevent>

        <messageevent name="barbacoa_no_estropeada" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REFUSE</value>

            </parameter>

            <parameter name="content" class="ontologia.acciones.Reparar"/>

        </messageevent>

        <messageevent name="barbacoa_estropeada" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.FAILURE</value>

            </parameter>

            <parameter name="content" class="ontologia.predicados.BarbacoaRota"/>



        </messageevent>

        <messageevent name="has_cocinado_barbacoa" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.INFORM_REF</value>

            </parameter>

            <parameter name="content" class="ontologia.predicados.HasCocinadoBarbacoa"/>

        </messageevent>

        <messageevent name="has_reparado" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.INFORM_REF</value>

            </parameter>

            <parameter name="content" class="ontologia.predicados.HasReparado"/>

        </messageevent>

        <messageevent name="perritos_quemados" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.FAILURE</value>

            </parameter>

            <parameter name="content" class="ontologia.predicados.PerritosQuemados"/>

        </messageevent>



    </events>
    <configurations>
        <configuration name = "default">
            <goals>
                <initialgoal ref="df_hambre_cocinarBarbacoa">
                    <parameter ref="description">
                        <value>
                            S.Fipa.createAgentDescription (null, S.Fipa.createAgentDescription ("Hambre", "CocinarComidaBarbacoa"))
                        </value>
                    </parameter>
                </initialgoal>
                <initialgoal ref="df_diversion_cocinarBarbacoa">
                    <parameter ref="description">
                        <value>
                            S.Fipa.createAgentDescription (null, S.Fipa.createAgentDescription ("Diversion", "CocinarComidaBarbacoa"))
                        </value>
                    </parameter>
                </initialgoal>
                <initialgoal ref="df_cocina_cocinarBarbacoa">
                    <parameter ref="description">
                        <value>
                            S.Fipa.createAgentDescription (null, S.Fipa.createAgentDescription ("Cocina", "CocinarComidaBarbacoa"))
                        </value>
                    </parameter>
                </initialgoal>
                <initialgoal ref="df_mecanica_reparar">
                    <parameter ref="description">
                        <value>
                            S.Fipa.createAgentDescription (null, S.Fipa.createAgentDescription ("Mecanica", "Reparar"))
                        </value>
                    </parameter>
                </initialgoal>
            </goals>
        </configuration>
    </configurations>
</agent>