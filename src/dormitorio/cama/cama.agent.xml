<agent xmlns="http://jadex.sourceforge.net/jadex"

       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://jadex.sourceforge.net/jadex

	                    http://jadex.sourceforge.net/jadex-0.96.xsd"

       name="cama"

       package="dormitorio.cama">



    <beliefs>
        <belief name="ocupado" class="Boolean">

            <fact>new Boolean(false)</fact>

        </belief>

        <belief name="energia" class="Integer">

        </belief>

        <belief name="time" class="int" updaterate="750">
            <fact> (int)(System.currentTimeMillis()) </fact>
        </belief>

        <belief name="tiempoFinalizacion" class="Time">

        </belief>

    </beliefs>

    <plans>

        <plan name="DescansarPlan">

            <body class="dormitorio.cama.DescansarPlan"/>

            <trigger>

                <messageevent ref="descansar"/>

            </trigger>

        </plan>

        <plan name="DescansarTerminarPlan">

            <body class="dormitorio.cama.DescansarTerminarPlan"/>

            <trigger>

                <messageevent ref="orinar_suelo"/>

            </trigger>

        </plan>

    </plans>



    <events>

        <messageevent name="dormir_suelo" direction="receive" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REQUEST</value>

            </parameter>

            <parameter name="content" class="ontologia.acciones.DormirSuelo"/>

        </messageevent>

        <messageevent name="orinar_suelo" direction="receive" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REQUEST</value>

            </parameter>

            <parameter name="content" class="ontologia.acciones.OrinarSuelo"/>

        </messageevent>

        <messageevent name="has_dormido_suelo" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.INFORM_REF</value>

            </parameter>

            <parameter name="content" class="ontologia.predicados.HasDormidoSuelo"/>



        </messageevent>

        <messageevent name="has_orinado_suelo" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.INFORM_REF</value>

            </parameter>

            <parameter name="content" class="ontologia.predicados.HasOrinadoSuelo"/>

        </messageevent>

    </