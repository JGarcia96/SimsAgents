<agent xmlns="http://jadex.sourceforge.net/jadex"

       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://jadex.sourceforge.net/jadex

	                    http://jadex.sourceforge.net/jadex-0.96.xsd"

       name="cama"

       package="dormitorio.cama">



    <beliefs>
        <belief name="ocupado" class="Boolean">

            <fact>new Boolean(false)</fact>

        </belief>

        <belief name="energia" class="Integer">

        </belief>

        <belief name="time" class="int" updaterate="750">
            <fact> (int)(System.currentTimeMillis()) </fact>
        </belief>

        <belief name="tiempoFinalizacion" class="Time">

        </belief>

    </beliefs>

    <plans>

        <plan name="DescansarPlan">

            <body class="dormitorio.cama.DescansarPlan"/>

            <trigger>

                <messageevent ref="descansar"/>

            </trigger>

        </plan>

        <plan name="DescansarTerminarPlan">

            <body class="dormitorio.cama.DescansarTerminarPlan"/>

            <trigger>

                <condition>$beliefbase.time>=$beliefbase.tiempoFinalizacion
                </condition>

            </trigger>

        </plan>

    </plans>



    <events>

        <messageevent name="descansar" direction="receive" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REQUEST</value>

            </parameter>

            <parameter name="content" class="ontologia.acciones.Descansar"/>

        </messageevent>


        <messageevent name="has_descansado" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.INFORM_REF</value>

            </parameter>

            <parameter name="content" class="ontologia.predicados.HasDescansado"/>



        </messageevent>

        <messageevent name="cama_ocupada" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REFUSE</value>

            </parameter>

            <parameter name="content" class="ontologia.acciones.Descansar"/>

        </messageevent>

    </events>
    <configurations>
        <configuration name = "default">
            <goals>
                <initialgoal ref="df_energia_descansar">
                    <parameter ref="description">
                        <value>
                            S.Fipa.createAgentDescription (null, S.Fipa.createAgentDescription ("Energia", "Descansar"))
                        </value>
                    </parameter>
                </initialgoal>
            </goals>
        </configuration>
    </configurations>
</agent>