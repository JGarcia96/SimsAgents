<agent xmlns="http://jadex.sourceforge.net/jadex"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://jadex.sourceforge.net/jadex
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
       name="maquina_ejercicios"
       package="sala_recreativa.maquina_ejercicios">


    <beliefs>
        <belief name="ocupado" class="Boolean">
            <fact>new Boolean(false)</fact>
        </belief>

        <belief name="energia" class="Integer">
        </belief>

        <belief name="higiene" class="Integer">
        </belief>

        <belief name="hambre" class="Integer">
        </belief>

        <belief name="deporte" class="Integer">
        </belief>

        <belief name="time" class="int" updaterate="750">
            <fact> (int)(System.currentTimeMillis()) </fact>
        </belief>

        <belief name="tiempoFinalizacion" class="Time">
        </belief>

    </beliefs>

    <plans>

        <plan name="EntrenarPlan">
            <body class="sala_recreativa.maquina_ejercicios.EntrenarPlan"/>
            <trigger>
                <messageevent ref="entrenar_maquina_ejercicios"/>
            </trigger>
        </plan>

        <plan name="EntrenarTerminarPlan">
            <body class="sala_recreativa.maquina_ejercicios.EntrenarTerminarPlan"/>
            <trigger>
                <condition>$beliefbase.time>=$beliefbase.tiempoFinalizacion
                </condition>
            </trigger>
        </plan>

    </plans>



    <events>
        <messageevent name="entrenar_maquina_ejercicios" direction="receive" type="fipa">
            <parameter name="performative" class="String" direction="fixed">
                <value>jadex.adapter.fipa.SFipa.REQUEST</value>
            </parameter>
            <parameter name="content" class="ontologia.acciones.Entrenar"/>
        </messageevent>


        <messageevent name="maquina_ejercicios_ocupada" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REFUSE</value>

            </parameter>

            <parameter name="content" class="ontologia.acciones.Entrenar"/>



        </messageevent>

        <messageevent name="has_entrenado" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.INFORM_REF</value>

            </parameter>

            <parameter name="content" class="ontologia.predicados.HasEntrenado"/>

        </messageevent>

    </events>

    <configurations>
        <configuration name = "default">
            <goals>
                <initialgoal ref="df_deporte_entrenar">
                    <parameter ref="description">
                        <value>
                            S.Fipa.createAgentDescription (null, S.Fipa.createAgentDescription ("Deporte", "Entrenar"))
                        </value>
                    </parameter>
                </initialgoal>
            </goals>
        </configuration>
    </configurations>

</agent>