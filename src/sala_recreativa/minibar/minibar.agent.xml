<agent xmlns="http://jadex.sourceforge.net/jadex"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://jadex.sourceforge.net/jadex
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
       name="minibar"
       package="sala_recreativa.minibar">


    <beliefs>
        <belief name="ocupado" class="Boolean">
            <fact>new Boolean(false)</fact>
        </belief>

        <belief name="energia" class="Integer">
        </belief>

        <belief name="diversion" class="Integer">
        </belief>

        <belief name="vejiga" class="Integer">
        </belief>

        <belief name="time" class="int" updaterate="750">
            <fact> (int)(System.currentTimeMillis()) </fact>
        </belief>

        <belief name="tiempoFinalizacion" class="Time">
        </belief>

    </beliefs>

    <plans>

        <plan name="BeberPlan">
            <body class="sala_recreativa.minibar.BeberPlan"/>
            <trigger>
                <messageevent ref="beber"/>
            </trigger>
        </plan>

        <plan name="BeberTerminarPlan">
            <body class="sala_recreativa.minibar.BeberTerminarPlan"/>
            <trigger>               
                <condition>$beliefbase.time>=$beliefbase.tiempoFinalizacion
                </condition>
           </trigger>
        </plan>

    </plans>



    <events>
        <messageevent name="beber" direction="receive" type="fipa">
            <parameter name="performative" class="String" direction="fixed">
                <value>jadex.adapter.fipa.SFipa.REQUEST</value>
            </parameter>
            <parameter name="content" class="ontologia.acciones.Beber"/>
        </messageevent>


        <messageevent name="minibar_ocupado" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.REFUSE</value>

            </parameter>

            <parameter name="content" class="ontologia.acciones.Beber"/>



        </messageevent>

        <messageevent name="has_bebido" direction="send" type="fipa">

            <parameter name="performative" class="String" direction="fixed">

                <value>jadex.adapter.fipa.SFipa.INFORM_REF</value>

            </parameter>

            <parameter name="content" class="ontologia.predicados.HasBebido"/>

        </messageevent>

    </events>

    <configurations>
        <configuration name = "default">
            <goals>
                <initialgoal ref="df_diversion_beber">
                    <parameter ref="description">
                        <value>
                            S.Fipa.createAgentDescription (null, S.Fipa.createAgentDescription ("Diversion", "Beber"))
                        </value>
                    </parameter>
                </initialgoal>
            </goals>
        </configuration>
    </configurations>

    </agent>